{{>layouts/header}}

<table class="table">
	<thead>
	  <tr>
		<th scope="col">ID</th>
		<th scope="col">Title</th>
		<th scope="col">Content</th>
	  </tr>
	</thead>
	<tbody>
		<!-- mustache문법이 리스트처럼 여러 데이터의 묶음일 경우 아래의 {{#  }} ~ {{/  }} 까지 반복하게됨. -->
		<!-- 이코드를 사용해서 모델에 저장되어있는 데이터를 받아옴 -->
		{{#articleList}}
		  <tr>
			<th>{{id}}</th>
			<td><a href="/articles/{{id}}">{{title}}</a></td>
			<td>{{content}}</td>
		  </tr>
		{{/articleList}}
	</tbody>
</table>

<a href="/articles/new">New Article</a>
{{>layouts/footer}}